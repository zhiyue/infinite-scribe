# Genesis Backend Environment Configuration

# Application Settings
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=INFO
API_V1_STR=/api/v1

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=postgres
DB_NAME=genesis
DB_POOL_SIZE=20
DB_MAX_OVERFLOW=10
DB_POOL_TIMEOUT=30
DB_ECHO=false

# JWT Authentication
JWT_SECRET_KEY=your-secret-key-change-in-production
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# Kafka Configuration
KAFKA_BOOTSTRAP_SERVERS=localhost:9092
KAFKA_CLIENT_ID=genesis-backend
KAFKA_CONSUMER_GROUP_ID=genesis-consumer-group
KAFKA_AUTO_OFFSET_RESET=latest
KAFKA_ENABLE_AUTO_COMMIT=true
KAFKA_SECURITY_PROTOCOL=PLAINTEXT

# Message Relay Service
MESSAGE_RELAY_BATCH_SIZE=100
MESSAGE_RELAY_POLL_INTERVAL=1
MESSAGE_RELAY_MAX_RETRIES=3

# CORS Configuration
CORS_ORIGINS=["http://localhost:3000", "http://localhost:8080"]
CORS_ALLOW_CREDENTIALS=true
CORS_ALLOW_METHODS=["GET", "POST", "PUT", "DELETE", "OPTIONS"]
CORS_ALLOW_HEADERS=["*"]

# Rate Limiting
RATE_LIMIT_REQUESTS_PER_MINUTE=100
RATE_LIMIT_BURST_SIZE=20

# Monitoring & Observability
PROMETHEUS_METRICS_ENABLED=false
OPENTELEMETRY_ENABLED=false
JAEGER_ENDPOINT=http://localhost:14268/api/traces

# External Services (if needed)
# REDIS_URL=redis://localhost:6379/0
# SENTRY_DSN=https://your-sentry-dsn

# Testing (override in test environment)
TEST_DB_NAME=genesis_test
TEST_KAFKA_BOOTSTRAP_SERVERS=localhost:9093
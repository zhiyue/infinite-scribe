# Test environment configuration
NODE_ENV=test

# Database
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=infinite_scribe_test
POSTGRES_USER=postgres
POSTGRES_PASSWORD=test_password

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=test_redis_password

# JWT Configuration (Test values)
JWT_SECRET_KEY=test_jwt_secret_key_for_unit_tests_only_32_chars_long
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=15
REFRESH_TOKEN_EXPIRE_DAYS=7

# Email Service (Test values)
RESEND_API_KEY=test_resend_api_key
RESEND_DOMAIN=test.example.com
RESEND_FROM_EMAIL=noreply@test.example.com
USE_MAILDEV=true
MAILDEV_HOST=localhost
MAILDEV_PORT=1025

# Security Configuration
PASSWORD_MIN_LENGTH=8
ACCOUNT_LOCKOUT_ATTEMPTS=5
ACCOUNT_LOCKOUT_DURATION_MINUTES=30

# Rate Limiting
RATE_LIMIT_LOGIN_PER_MINUTE=5
RATE_LIMIT_REGISTER_PER_HOUR=10
RATE_LIMIT_PASSWORD_RESET_PER_HOUR=3
# Backend/API Gateway Environment Configuration Template
# Copy to .env.backend and update values
# This file is used by the FastAPI backend services

# Application Settings
NODE_ENV=development
API_PORT=8000
LOG_LEVEL=debug

# Database Connections (use service names in Docker network)
# PostgreSQL
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_DB=infinite_scribe
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
DATABASE_URL=postgresql://postgres:postgres@postgres:5432/infinite_scribe

# Redis
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=redis
REDIS_URL=redis://:redis@redis:6379/0

# Neo4j Connection
NEO4J_URI=bolt://neo4j:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=neo4j

# Milvus Connection
MILVUS_HOST=milvus
MILVUS_PORT=19530

# MinIO Connection
MINIO_ENDPOINT=minio:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_USE_SSL=false

# Kafka Connection
KAFKA_BROKERS=kafka:29092
KAFKA_BOOTSTRAP_SERVERS=kafka:29092
KAFKA_CLIENT_ID=api-gateway

# LLM Services
LITELLM_API_KEY=sk-litellm-dev-2024
LITELLM_BASE_URL=http://litellm:4000
OPENAI_API_KEY=YOUR_OPENAI_API_KEY_HERE
ANTHROPIC_API_KEY=YOUR_ANTHROPIC_API_KEY_HERE

# Observability
LANGFUSE_SECRET_KEY=sk-lf-dev-2024
LANGFUSE_PUBLIC_KEY=pk-lf-dev-2024
LANGFUSE_HOST=http://langfuse:3001

# Prefect Orchestration
PREFECT_API_URL=http://prefect-api:4200/api
PREFECT_API_KEY=prefect-dev-2024

# Security
JWT_SECRET=jwt-secret-infinite-scribe-2024-development
JWT_EXPIRES_IN=7d
ENCRYPTION_KEY=enc-key-infinite-scribe-2024-dev

# API Documentation
ENABLE_SWAGGER=true
ENABLE_GRAPHQL_PLAYGROUND=true

# Telemetry
ENABLE_TELEMETRY=true
OTEL_EXPORTER_OTLP_ENDPOINT=http://otel-collector:4317
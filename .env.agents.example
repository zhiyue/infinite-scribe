# Agent Services Environment Configuration Template
# Copy to .env.agents and update values
# This file is used by all AI Agent services

# Agent Common Settings
AGENT_LOG_LEVEL=info
AGENT_RETRY_ATTEMPTS=3
AGENT_TIMEOUT_SECONDS=300

# Database Connections (use service names in Docker network)
DATABASE_URL=postgresql://postgres:InfiniteScribe2024!@postgres:5432/infinite_scribe
REDIS_URL=redis://:RedisSecure2024!@redis:6379/1

# Neo4j Knowledge Graph
NEO4J_URI=bolt://neo4j:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=Neo4jSecure2024!

# Milvus Vector Search
MILVUS_HOST=milvus
MILVUS_PORT=19530
MILVUS_COLLECTION_PREFIX=agent_

# MinIO Storage
MINIO_ENDPOINT=minio:9000
MINIO_ACCESS_KEY=infinitescribe2024
MINIO_SECRET_KEY=MinioSecure2024!
MINIO_BUCKET_NAME=novels

# Kafka Event Bus
KAFKA_BROKERS=kafka:29092
KAFKA_CONSUMER_GROUP_PREFIX=agent-
KAFKA_TOPICS_PREFIX=novel-events-

# LLM Configuration (via LiteLLM Gateway)
LITELLM_BASE_URL=http://litellm:4000
LITELLM_API_KEY=sk-litellm-dev-2024
LLM_MODEL_WORLDSMITH=claude-3-opus-20240229
LLM_MODEL_PLOTMASTER=gpt-4-turbo-preview
LLM_MODEL_WRITER=claude-3-sonnet-20240229
LLM_MODEL_CRITIC=gpt-4
LLM_TEMPERATURE_CREATIVE=0.8
LLM_TEMPERATURE_ANALYTICAL=0.2

# Prefect Workflow
PREFECT_API_URL=http://prefect-api:4200/api
PREFECT_API_KEY=prefect-dev-2024

# Observability
LANGFUSE_SECRET_KEY=sk-lf-dev-2024
LANGFUSE_PUBLIC_KEY=pk-lf-dev-2024
LANGFUSE_HOST=http://langfuse:3001
ENABLE_TRACING=true

# Agent-Specific Configurations
WORLDSMITH_MAX_RETRIES=5
PLOTMASTER_CHAPTER_BATCH_SIZE=10
WRITER_MIN_WORDS_PER_CHAPTER=3000
CRITIC_REVIEW_THRESHOLD=7.0
FACTCHECKER_CACHE_TTL=3600